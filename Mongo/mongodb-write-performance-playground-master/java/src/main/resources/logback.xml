<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.dotkam" level="trace"/>
    <logger name="org.bson.io.PoolOutputBuffer" level="info"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>


</configuration>